!!! 5
%html
  %head
    %title= "Cuando es Quincena"
    %link{ :href => "/feed", :rel => "alternate", :title => "Atom", :type => "application/atom+xml" }
    %link{:href=>"//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css", :rel=>"stylesheet"}
    :css
      .red{ color: red; }
      .orange{ color: orange; }
      .yellow{ color: yellow; }
      .green{ color: green; }

  %body
    .container
      .row
        .col-md-3
        .col-md-6
          %h2.text-center
            Hoy es Quincena?
          %h1.text-center
            = @quincena.is_today? ? "YES!!!" : "NO!!"
        .col-md-2
      .row
        .col-md-3
        .col-md-6
          %h2.text-center
            Faltan
            = class_by_days(@quincena.left_days)
            dias para la quincena
        .col-md-2
      .row
        .col-md-3
        .col-md-6
          %h4.text-center
            La siguiente quincena es el
            = @quincena.next_pay_date.strftime("%A %d de %B %Y")
        .col-md-2

    %footer.text-center
      %p
        Copyright 2015 devmask
    %script{:src=>"https://bitbucket.org/mckamey/countdown.js/raw/tip/countdown.min.js"}
